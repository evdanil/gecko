{
  "name": "gecko-vscode",
  "displayName": "GECKO Configuration Validator",
  "description": "Real-time network configuration validation for Cisco IOS, Juniper, and more.",
  "version": "0.0.1",
  "publisher": "gecko",
  "engines": {
    "vscode": "^1.80.0"
  },
  "main": "./dist/extension.js",
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "cisco",
    "network",
    "configuration",
    "linter",
    "validator",
    "ios",
    "juniper"
  ],
  "activationEvents": [
    "onLanguage:network-config",
    "onLanguage:plaintext"
  ],
  "contributes": {
    "languages": [
      {
        "id": "network-config",
        "aliases": [
          "Network Config",
          "Cisco IOS",
          "Juniper"
        ],
        "extensions": [
          ".conf",
          ".cfg",
          ".ios",
          ".junos"
        ],
        "filenames": [
          "startup-config",
          "running-config"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "gecko.scan",
        "title": "Scan Configuration",
        "category": "GECKO",
        "icon": "$(search)"
      },
      {
        "command": "gecko.scanSelection",
        "title": "Scan Selected Text",
        "category": "GECKO",
        "icon": "$(selection)"
      },
      {
        "command": "gecko.setLanguage",
        "title": "Set as Network Config",
        "category": "GECKO"
      },
      {
        "command": "gecko.toggleDebug",
        "title": "Toggle Debug Logging",
        "category": "GECKO"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "gecko.scan",
          "group": "1_gecko@1",
          "when": "editorTextFocus"
        },
        {
          "command": "gecko.scanSelection",
          "group": "1_gecko@2",
          "when": "editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "gecko.scan",
          "group": "navigation",
          "when": "resourceExtname =~ /^\\.(conf|config|cfg|ios|junos|txt)$/"
        }
      ],
      "commandPalette": [
        {
          "command": "gecko.scanSelection",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gecko/gecko.git"
  },
  "scripts": {
    "build": "bun x esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "bun x esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
    "package": "bun run build && vsce package --no-dependencies"
  },
  "dependencies": {
    "@gecko/core": "workspace:*",
    "@gecko/rules-default": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.7.1"
  }
}
